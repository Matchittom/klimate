{{!--

login form handlebar template

--}}

<h2>Login</h2>
<form id="login-form" action="/login" method="POST">
    <div>
        <label for="emailAddressInput">Email Address:</label>
        <input type="email" id="emailAddressInput" name="emailAddress" required>
    </div>
    <div>
        <label for="passwordInput">Password:</label>
        <input type="password" id="passwordInput" name="password" required>
    </div>
    <button type="submit">Login</button>
</form>
<p>Don't have an account? <a href="{{ registrationLink }}">Click here to register!</a></p>


{{#if error}}
<p id="pError">{{error}}</p>
{{/if}}